<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/gradient"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Select Your Plan"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/round_et"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Package"
            android:paddingStart="15dp"
            android:layout_marginTop="5dp"
            android:textSize="17.5sp"
            android:textStyle="bold"
            android:textColor="#363636"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="> Salary range upto 6 LPA"
            android:paddingStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="47.5dp"
            android:text="> Direct connect to recruiter via Whatsapp"
            android:paddingStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="> Validity : 1 month"
            android:paddingStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="82.5dp"
            android:text="> Service Charge : Rs. 199"
            android:paddingStart="15dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/c2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/c1"
        android:background="@drawable/round_et"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Standard Package"
            android:paddingStart="15dp"
            android:layout_marginTop="5dp"
            android:textSize="17.5sp"
            android:textStyle="bold"
            android:textColor="#363636"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="> Salary range : 6-10 LPA"
            android:paddingStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="47.5dp"
            android:text="> Direct connect to recruiter via Whatsapp"
            android:paddingStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="> Validity : 1 month"
            android:paddingStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="82.5dp"
            android:text="> Service Charge : Rs. 299"
            android:paddingStart="15dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/c3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/c2"
        android:background="@drawable/round_et"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premium Package"
            android:paddingStart="15dp"
            android:layout_marginTop="5dp"
            android:textSize="17.5sp"
            android:textStyle="bold"
            android:textColor="#363636"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="> Salary range : 10-15 LPA"
            android:paddingStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="47.5dp"
            android:text="> Direct connect to recruiter via Whatsapp"
            android:paddingStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="> Validity : 1 month"
            android:paddingStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="82.5dp"
            android:text="> Service Charge : Rs. 399"
            android:paddingStart="15dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/c4"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/c3"
        android:background="@drawable/round_et"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Executive Package"
            android:paddingStart="15dp"
            android:layout_marginTop="5dp"
            android:textSize="17.5sp"
            android:textStyle="bold"
            android:textColor="#363636"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="> Salary range : 15+ LPA"
            android:paddingStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="47.5dp"
            android:text="> Direct connect to recruiter via Whatsapp"
            android:paddingStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="> Validity : 1 month"
            android:paddingStart="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="82.5dp"
            android:text="> Service Charge : Rs. 499"
            android:paddingStart="15dp"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>