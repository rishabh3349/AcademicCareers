<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardElevation="5dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp">
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Actively Hiring"
            android:textSize="14sp"
            android:background="@drawable/round_status"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="2dp"
            android:drawableLeft="@drawable/arrow_up"
            android:drawablePadding="8dp"/>
        <TextView
            android:id="@+id/role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Physics Faculty"
            android:textStyle="bold"
            android:layout_marginTop="45dp"
            android:layout_marginStart="13dp"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vibration Academy"
            android:layout_marginTop="75dp"
            android:layout_marginStart="14dp"
            android:textSize="16sp"
            android:textColor="#959896"/>
        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="Bharuch , India"
            android:textColor="#555555"
            android:layout_marginStart="35dp"
            android:drawablePadding="5dp"
            app:drawableLeftCompat="@drawable/baseline_location_on_24" />
        <TextView
            android:id="@+id/job_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp"
            android:text="Full Time"
            android:textColor="#555555"
            android:layout_marginStart="35dp"
            android:drawablePadding="5dp"
            app:drawableLeftCompat="@drawable/person" />
        <TextView
            android:id="@+id/salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:text="16-20L / year"
            android:textColor="#555555"
            android:layout_marginStart="35dp"
            android:drawablePadding="5dp"
            app:drawableLeftCompat="@drawable/baseline_payments_24"/>
        <TextView
            android:id="@+id/new_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:text="View Details >"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginStart="25dp"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>